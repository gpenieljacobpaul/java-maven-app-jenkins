pipeline {
    agent any 
    
    stages {
        stage("build") {
            steps {
                echo 'building the application'

            }
        }
        stage("test") {
            when {
                expression {
                    BRANCH_NAME == 'dev'
                }
            }
            steps {
                echo 'testing the application'
            }
        }
        stage("deploy") {
            when {
                expression {
                    BRANCH_NAME == 'dev' || BRANCH_NAME == 'master'
                }
            }
            steps {
                echo 'delpoying the application'
            }
        }

    }

}
